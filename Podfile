platform :ios, '14.0'

project 'eCommerceApp.xcodeproj'

target 'eCommerceApp' do
  use_frameworks!

  # Networking
  pod 'Alamofire'
  
  # Image Loading
  pod 'Kingfisher'
  
  # UI Components
  pod 'SwiftUI-Introspect'
  
  # Local Storage
  pod 'RealmSwift'
  
  # UI Testing
  target 'eCommerceAppTests' do
    inherit! :search_paths
    pod 'Quick'
    pod 'Nimble'
  end
end 